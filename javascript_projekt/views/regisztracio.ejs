    <%- include('mainheader',{title: "Regisztráció"}) -%>

    <form class="form-signin"  method="Post">
        <div mb-4">
            <h1 class="h1 mb-3 font-weight-normal text-center"><u>Regisztráció</u></h1>
        </div>

        <div class="form-label-group col-3 mx-auto">
            <label>Felhasználónév:</label>
            <input type="text" name="username" class="form-control" placeholder="Felhasználónév">
        </div>

        <div class="form-label-group col-3 mb-3 mx-auto">
            <label>Jelszó:</label>
            <input type="password" name="password" class="form-control" placeholder="Jelszó" required>
        <% if(typeof errorreg !== "undefined") {%>
            <div class="alert alert-danger"><%= errorreg %></div>
            <% } %>
        </div>

        <div class="form-label-group col-3 mb-3 mx-auto">
            <label>Jelszó megismétlése:</label>
            <input type="password" name="passwordagain" class="form-control" placeholder="Jelszó megismétlése" required>
            <% if(typeof errorpass !== "undefined"){%>
            <div class="alert alert-danger"><%= errorpass %></div>
            <% } %>
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="Regisztráció"/>
            <a class="btn btn-warning" href="/" role="button">Vissza</a>
        </div>
    </form>

    <%- include('footer') -%>